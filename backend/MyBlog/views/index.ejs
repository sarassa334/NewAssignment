<!-- Include Header -->
<%- include('partials/header') %>

<div class="parent">
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="d-flex flex-column align-items-start gap-2">
          <h4>Build your community, start a project.</h4>
          <div class="d-flex flex-wrap gap-3">
            <button
              type="button"
              class="docbt btn btn-outline-secondary px-4 py-2 d-flex align-items-center gap-2"
              style="min-width: 200px"
            >
              <i class="icon1 fas fa-plus"></i>
              <span>New Post</span>
            </button>

            <button
              type="button"
              class="docbt2 btn btn-outline-success px-4 py-2 d-flex align-items-center gap-2"
              style="min-width: 200px"
            >
              <i class="icon2 fas fa-file-alt"></i>
              <span>New Docs</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="d-flex flex-column align-items-start gap-2">
          <div>
            <h4>Your docs</h4>
            <p class="gray">
              Create a beautiful documentation for your product.
            </p>
          </div>
        </div>
      </div>
    </div>
    <hr />
  </div>
  <!-- post cards -->
  <div class="container mt-5">
    <!-- no post message -->
    <% if (posts.length === 0) { %>
    <div class="text-center my-5">
      <p class="text-muted">No posts yet. Click "New Post" to get started!</p>
    </div>
    <% } %>
    <!-- no post message -->
    <div class="row g-4">
      <% posts.forEach(post => { %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="myPost card h-100 border-1 position-relative">
          <!-- Small image in top-right corner -->
          <img
            src="https://cdn-icons-png.flaticon.com/512/149/149071.png
"
            class="position-absolute top-0 end-0 mt-3 me-2 rounded"
            width="30"
            height="30"
            alt="Post icon"
          />

          <div class="card-body d-flex flex-column justify-content-between p-3">
            <div>
              <h5 class="card-title mb-2 fw-semibold" style="font-size: 1.3rem">
                <%= post.title %>
              </h5>
              <p class="card-text text-muted mb-2" style="font-size: 0.9rem">
                <% if (post.content.length > 100) { %>
                  <%= post.content.slice(0, 100) %>...
                  <a href="/post/<%= post.id %>" class="text-primary">Read More</a>
                <% } else { %>
                  <%= post.content %>
                <% } %>
              </p>
              
              <hr class="my-2" />
            </div>
            <div class="mt-2 d-flex justify-content-between align-items-center">
              <span class="text-muted small">Edited Apr 30, 2025</span>
              <div class="btn-group" role="group">
                <a
                  href="/edit/<%= post.id %>"
                  class="btn btn-sm btn-primary rounded-end-0 px-3"
                >
                  <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a
                  href="/delete/<%= post.id %>"
                  class="btn btn-sm btn-danger rounded-start-0 px-3"
                  onclick="return confirm('Delete this post?')"
                >
                  <i class="bi bi-trash"></i> Delete
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
  <!-- post cards -->
  <!-- <a href="/new" class="btn btn-primary mt-3">Create New Post</a> -->
</div>

<!-- Include Footer -->
<%- include('partials/footer') %>

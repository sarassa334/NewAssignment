<%- include('partials/header') %>

<div class="container" style="margin-top: 80px; max-width: 700px;">
  <div class="bg-white shadow-sm p-5 rounded">
    <h2 class="mb-4 text-center fw-bold">Edit Post</h2>

    <form action="/edit/<%= post.id %>" method="POST">
      <div class="mb-4">
        <label for="title" class="form-label fw-semibold">Title</label>
        <input type="text" id="title" name="title" class="form-control form-control-lg" value="<%= post.title %>" required>
      </div>

      <div class="mb-4">
        <label for="content" class="form-label fw-semibold">Content</label>
        <textarea id="content" name="content" class="form-control" rows="7" required><%= post.content %></textarea>
      </div>

      <div class="d-flex justify-content-between flex-wrap gap-2">
        <a href="/" class="btn btn-outline-secondary">‚Üê Back to Home</a>
        <button type="submit" class="btn btn-primary px-4">Update Post</button>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>

<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Blog Posts</h1>
  <a href="/new">Create New Post</a>

  <% posts.forEach(post => { %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <small>ID: <%= post.id %></small>
      <div>
        <a href="/edit/<%= post.id %>">Edit</a>
        <a href="/delete/<%= post.id %>" onclick="return confirm('Delete this post?')">Delete</a>
      </div>
    </div>
  <% }); %>
</body>
</html>
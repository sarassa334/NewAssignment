<!-- Include Header -->
<%- include('partials/header') %>

<div class="container " style="margin-top: 80px; max-width: 700px;">
  <div class="bg-white shadow-sm p-5 rounded">
    <h2 class="mb-4 text-center fw-bold">Create a New Blog Post</h2>
    
    <form action="/api/posts" method="POST">
      <div class="mb-4">
        <label for="title" class="form-label fw-semibold">Title</label>
        <input type="text" id="title" name="title" class="form-control form-control-lg" placeholder="Enter post title" required>
      </div>
      
      <div class="mb-4">
        <label for="content" class="form-label fw-semibold">Content</label>
        <textarea id="content" name="content" class="form-control" rows="7" placeholder="Write your content here..." required></textarea>
      </div>
      
      <div class="d-flex justify-content-between flex-wrap gap-2">
        <a href="/" class="btn btn-outline-secondary">‚Üê Back to Home</a>
        <button type="submit" class="btn btn-primary px-4">Publish Post</button>
      </div>
    </form>
  </div>
</div>

<!-- Include Footer -->
<%- include('partials/footer') %>
